
@using Banka.Models
@model List<Makbuz>

@{
    ViewBag.Title = "MakbuzSil";
}



<div class="container-scroller">
    @Html.Partial("PartialView");

    <div class="row ">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Makbuz</h4>
                    <div class="table-responsive">
                        <div class="block-controls">
                            <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                            <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input">
                                            </label>

                                        </div>
                                    </th>
                                    <th> Makbuz İşlemi </th>
                                    <th> Makbuz Ücreti</th>
                                    <th> İşlem ID </th>
                                    


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check form-check-muted m-0">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input">
                                                </label>
                                            </div>
                                        </td>

                                        <td> @item.makbuz_islemi</td>
                                        <td>@item.makbuz_ucreti </td>

                                        <td> @item.islem_id </td>


                                        <td> <a href="#" data-id="@item.makbuz_id" class="btn btn-info mstSil"> Sil </a>  </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script type="text/javascript" src="/Content/assets/js/required/jquery-1.11.1.min.js"></script>

    <script>
        $(".mstSil").click(function () {

            var sonuc = confirm("Makbuz silinsin mi");

            if (sonuc) {
                var mstID = $(this).attr("data-id");
                $.ajax(
                    {
                        type: "POST",
                        url: "/Makbuz/Sil/" + mstID,
                        success: function () {

                            alert("kayıt silindi");
                            window.location.replace("/Makbuz/MakbuzSil");
                        },
                        error: function () {
                            alert("silme sırasında hata oluştu");
                        }


                    });

            }
            else {

                alert("Silme işlemi iptal edildi");
            }

        });




    </script>

}






