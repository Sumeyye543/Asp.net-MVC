
@using Banka.Models
@model List<Hesaplar>

@{
    ViewBag.Title = "HesapBakiye1";
}


<div class="container-scroller">
    @Html.Partial("PartialView");
    <div class="main-panel">
        <div class="row ">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hesaplarım</h4>
                        @Session["m"]
                        @{
                            Session["m"] = "";
                        }
                        <div class="table-responsive">
                            <div class="block-controls">
                                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            <div class="form-check form-check-muted m-0">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input">
                                                </label>
                                            </div>
                                        </th>
                                        <th> Hesap ID </th>
                                        <th> Hesap Türü </th>
                                        <th> Hesap Bakiye </th>


                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check form-check-muted m-0">
                                                    <label class="form-check-label">
                                                        <input type="checkbox" class="form-check-input">
                                                    </label>
                                                </div>
                                            </td>

                                            <td> @item.hesap_id <a></a></td>

                                            <td>@item.hesap_turu </td>

                                            <td> @item.hesap_bakiye </td>


                                            <td>
                                                <a onclick="myFunction(this)" id="@item.hesap_id" data-animal-type="@item.hesap_id" class="rounded btn btn-danger"> Bakiye Çek </a>

                                            </td>

                                        </tr>
                                    }





                                </tbody>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="div2" style="display:none" alt="">
            <div class="row ">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Bakiye</h4>

                            <p class="card-description">  </p>
                            <form class="forms-sample" action="/Hesap/Guncelle1" method="post" role="form">
                                <label id="demo"> </label>
                                <input name="id" id="demo1" type="hidden" />

                                <div class="form-group">
                                    <label for="exampleInputPassword4">Çekilecek Bakiye</label>

                                    <input type="text" class="form-control" placeholder="Bakiye" name="bakiye">


                                </div>

                                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

                            </form>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>


</div>




<script>

    function myFunction(animal) {
        var x = document.getElementById("div2");
        var animalType = animal.getAttribute("data-animal-type");


        document.getElementById("demo").innerHTML = animalType
        document.getElementById("demo1").setAttribute("value", animalType)

        x.style.display = "block";


    }
</script>

