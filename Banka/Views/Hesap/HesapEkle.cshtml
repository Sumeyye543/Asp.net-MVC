
@{
    ViewBag.Title = "HesapEkle";
}
@using Banka.Models;

@model Hesaplar


<div class="container-scroller">
    @Html.Partial("PartialView");
    <div class="main-panel">

            <div class="page-header">
                <h3 class="page-title"> Hesap Ekle </h3>
          
            </div>
            <div class="row">
                @ViewBag.Message
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Hesap Ekle</h4>
                            <p class="card-description">  </p>
                            <form class="forms-sample" action="/Hesap/HesapEkle" method="post" role="form">

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Hesap Turu</label>



                                    <select class="form-control" name="hesap_turu">
                                        @foreach (Kur item in ViewBag.kur)
                                        {
                                            <option value="@item.kur_adi">@item.kur_adi</option>
                                        }
                                    </select>

                                </div>

                                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

                            </form>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>








