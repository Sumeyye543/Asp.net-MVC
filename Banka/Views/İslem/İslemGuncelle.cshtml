
@using Banka.Models
@model List<İslemler>
@{
    ViewBag.Title = "İslemGuncelle";
}



<div class="container-scroller">
    @Html.Partial("PartialView");

    <div class="row ">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">İşlemler</h4>
                    <div class="table-responsive">
                        <div class="block-controls">
                            <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                            <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input">
                                            </label>

                                        </div>
                                    </th>
                                    <th> İşlem Adı </th>
                                    <th> İşlem Bakiye </th>
                                    <th> İşlem Tarihi </th>
                                    <th> Müşteri Tc </th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input">
                                            </label>
                                        </div>
                                    </td>

                                    <td> @item.islem_adi</td>
                                    <td>@item.islem_bakiye </td>

                                    <td> @item.islem_tarihi </td>

                                    <td> @item.musteri_Tc </td>


                                    <td> <a href="/İslem/Guncelle/@item.islem_id" class="rounded btn btn-danger "> Güncelle</a></td>
                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
